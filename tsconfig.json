{
	"compilerOptions": {
		"allowJs": true, // parse & lint JavaScript along with TypeScript
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noEmit": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	},
	"include": [
		"./src/**/*"
	]
}
